<div class="container">
  {{!-- Add Burger --}}
  <div class="jumbotron">
    <h1>Burgers: Add some, Eat some!!</h1>
    <br>
    <h2>Create a new Burger here!</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="burger-name">New Burger Name:</label>
        <input type="text" id="burger-name" name="name" required>
        <button type="submit">Add Burger</button>
      </div>
    </form>
  </div>

  {{!-- List of Burgers that have not been devoured --}}
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="available"><strong>Burgers to Devour</strong></div>
        <div class="panel-body" id="available-body">
          {{#each burgers}}
          {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.name}} </strong></span>
            <button class="change-devour" data-id="{{this.id}}" data-newdevour="{{devour}}">Devour it</button>
            <hr>
          {{/unless}}
          {{/each}}
        </div>
      </div>
    </div>

    {{!-- List of Burgers that have been devoured --}}
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="devoured"><strong>Devoured Burgers</strong></div>
        <div class="panel-body" id="devoured-body">
          {{#each burgers}}
          {{#if devoured}}
            <span><strong> {{this.id}} - {{this.name}} </strong></span>
            <button class="delete-burger" data-id="{{this.id}}">Delete</button>
            <hr>
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>