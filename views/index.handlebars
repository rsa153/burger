<h1><u>Burgers: Add some, Eat some!!</u></h1>

<div class="add-burger">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-name">Burger Name:</label>
      <input type="text" id="burger-name" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Has it been devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured<br>
      <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>
  <p class="divider">____________________________________________________________________________</p>
</div>


<div class="not-devoured">
  <h2>Burgers that have NOT been devoured!</h2>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
  <p class="divider">____________________________________________________________________________</p>
</div>

<div class="devoured">
  <h2>Burgers that have been devoured!</h2>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devour=false}}
  {{/if}}
  {{/each}}
  <p class="divider">____________________________________________________________________________</p>
</div>